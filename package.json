{
    "name": "express-ts-template",
    "version": "1.2.0",
    "description": "Simple starter template for ExpressJs and TypeScript based on expressjs/generator and TypeScript-Node-Starter",
    "main": "server.js",
    "scripts": {
        "start": "yarn run serve",
        "build": "yarn run build-ts",
        "serve": "node dist/server.js",
        "test": "jest --coverage=false --verbose",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
        "watch-node": "nodemon dist/server.js",
        "dev": "nodemon src/server.ts",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "eslint src/*.ts",
        "lint-fix": "yarn lint --fix",
        "debug": "yarn run build && yarn run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
        "typecheck": "tsc --noEmit",
        "run-prettier": "prettier src/*.ts",
        "validate-prettiness": "yarn run-prettier -c",
        "make-prettier": "yarn run-prettier --write"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "ejs": "^3.1.10",
        "express": "^4.19.2",
        "http-errors": "^1.8.1",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/ejs": "^3.1.5",
        "@types/express": "4.17.21",
        "@types/http-errors": "2.0.4",
        "@types/jest": "29.5.12",
        "@types/morgan": "1.9.9",
        "@types/node": "20.13.0",
        "@types/supertest": "6.0.2",
        "@typescript-eslint/eslint-plugin": "7.11.0",
        "@typescript-eslint/parser": "7.11.0",
        "concurrently": "8.2.2",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-import": "2.29.1",
        "jest": "29.7.0",
        "nodemon": "3.1.2",
        "prettier": "3.3.0",
        "supertest": "7.0.0",
        "ts-jest": "29.1.4",
        "ts-node": "^10.9.2",
        "typescript": "5.4.5"
    }
}
