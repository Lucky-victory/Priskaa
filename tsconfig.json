{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "dist"],

    "include": ["src/**/*"]
}
